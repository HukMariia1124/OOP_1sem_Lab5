<Window x:Class="Lab5_WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator &amp; Sorter" Height="550" Width="400">
    
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#b8ccf2"/>
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <RadioButton x:Name="RadioFrac" Content="Fractions" IsChecked="True" Margin="0,0,20,0" Checked="Radio_Checked"/>
            <RadioButton x:Name="RadioComplex" Content="Complex Numbers" Checked="Radio_Checked"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Number A:" FontWeight="Bold"/>
            <TextBox x:Name="InputA" Padding="5"/>
            <TextBlock x:Name="HintA" Text="e.g. '1/2', '-5'" FontSize="10" Foreground="Gray"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Number B:" FontWeight="Bold"/>
            <TextBox x:Name="InputB" Padding="5"/>
            <TextBlock x:Name="HintB" Text="e.g. '2/3'" FontSize="10" Foreground="Gray"/>
        </StackPanel>

        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="+" Click="BtnCalculate_Click" Tag="Add" Margin="2" Padding="5"/>
            <Button Content="-" Click="BtnCalculate_Click" Tag="Sub" Grid.Column="1" Margin="2" Padding="5"/>
            <Button Content="*" Click="BtnCalculate_Click" Tag="Mul" Grid.Column="2" Margin="2" Padding="5"/>
            <Button Content="/" Click="BtnCalculate_Click" Tag="Div" Grid.Column="3" Margin="2" Padding="5"/>
        </Grid>

        <GroupBox x:Name="GroupSort" Header="List Sorting (Fractions Only)" Grid.Row="4" Margin="0,0,0,20" BorderBrush="Gray" FontSize="14">
            <StackPanel Margin="5">
                <TextBlock Text="Enter list (separated by space or comma):"/>
                <TextBox x:Name="InputSort" Margin="0,5" Padding="5" 
                         ToolTip="Example: 1/2, -5, 0, 3/4"/>
                <Button Content="Sort List" Click="BtnSort_Click"/>
            </StackPanel>
        </GroupBox>

        <Border Grid.Row="5" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="#F8F8F8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10, 10, 10, 60">
                    <TextBlock Text="Result:" HorizontalAlignment="Center" Foreground="Gray" FontSize="20"/>
                    <TextBlock x:Name="TextResult" Text="-" FontSize="30" FontWeight="Bold" 
                               HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>